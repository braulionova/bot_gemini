[Unit]
Description=Gemini Flash Trading Bot
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/bot_gemini
ExecStart=/usr/bin/python3 /root/bot_gemini/main.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
